<div class="grid">
  <div class="grid-item">
    <div class="grid-card">
      <div class="card-col-2 card-img">
        <img /><br>
        {{log model.id "show.hbs"}}
        <button {{action "modalButton" }} class="modal-btn button">Delete</button>
        <button {{action "isEditing" }} class="button">Edit</button>
      
      </div>
      <div class="card-col-1">
        <div class="card">
          <div class="card-content">

            {{#if isEditing}}
            {{input placeholder="Make" value=model.make}}<br>
            {{else}}
            <h3 class="card-text">Make:
              {{model.make}}
            </h3>
            {{/if}}
            {{#if isEditing}}
            {{input placeholder="Model" value=model.model}}<br>
            {{else}}
            <p class="card-text">Model:
              {{model.model}}
            </p>
            {{/if}}
            {{#if isEditing}}
            {{input placeholder="Color" value=model.color}}<br>
            {{else}}
            <p class="card-text">Color:
              {{model.color}}
            </p>
            {{/if}}

            {{#if isEditing}}
            {{input placeholder="Year Made" value=model.yearMade}}<br>
            {{else}}
            <p class="card-text">Year Made:
              {{model.yearMade}}
            </p>
            {{/if}}
            {{#if isEditing}}
            {{input placeholder="Description" value=model.description}}<br>
            {{else}}
            <p class="card-text">Condition:
              {{model.description}}
            </p>
            {{/if}}
            {{#if isEditing}}
            <button {{action "updateGuitar" }}>Submit</button><button {{action "cancelEdit" }}>Cancel</button>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal-bg">
  <div class="modal">
    <h2>Sure You Want To Delete?</h2>
    
       <button {{action "deleteGuitar" model.id}} class="button">Delete</button>
       <span {{action "modalClose"}} class="modal-close">X</span>
  </div>
</div>

{{outlet}}