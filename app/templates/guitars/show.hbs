<div class="grid">
  <div class="grid-item">
    <div class="grid-card">
      <div class="card-col-2" class="card-img">
        <img /><br>
        {{log model.id "show.hbs"}}
        <button {{action "deleteGuitar" model.id}} class="button" >Delete</button>
        <button {{action "updateGuitar"}} class="button" >Update</button>
      
      </div>
      <div class="card-col-1">
        <div class="card">
          <div class="card-content">
            <h3 class="card-text">Make: {{model.make}}</h3>
            <p class="card-text">Model: {{model.model}}</p>
            <p class="card-text">Color: {{model.color}}</p>
            <p class="card-text">Year Made: {{model.yearMade}}</p>
            <p class="card-text">Description: {{model.description}}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{{outlet}}